APP_HOST=0.0.0.0
APP_PORT=8082
RELOAD=true
ENVIRONMENT=local
POSTGRES_USER=postgres
POSTGRES_PASS=postgres
POSTGRES_DBNAME=postgres
POSTGRES_HOST_READER=localhost
POSTGRES_HOST_WRITER=localhost
POSTGRES_PORT=5432

# This is not a secure setting, but postgres is hidden in the container so it's ok here
POSTGRES_HOST_AUTH_METHOD=trust
POSTGRES_INITDB_WALDIR=/tmp/postgresql/wal
PGDATA=/var/lib/postgresql/data